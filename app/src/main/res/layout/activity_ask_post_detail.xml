<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/recycler_even"
        android:layout_margin="5dp"
        card_view:cardElevation="@dimen/card_elevation">


        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_general"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ask_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_title_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Title"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="title"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_description_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Description"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="description"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_no_of_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_no_of_room_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Rooms"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_no_of_room_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="no_of_room"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_price_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Price"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_price_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="price"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_address_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Address"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="address"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ask_post_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/ask_post_created_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Created on"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

                <TextView
                    android:id="@+id/ask_post_created_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="post created on"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/supporting_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/padding_general"
                    android:paddingEnd="@dimen/padding_general"
                    android:layout_weight="3"
                    android:src="@drawable/choose_image_icon" />

                <LinearLayout
                    android:id="@+id/ask_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ask_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/home_edit_text_icons_padding"
                        android:drawableStart="@drawable/ic_action_user"
                        android:text="Name"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/supporting_text_size" />

                    <TextView
                        android:id="@+id/ask_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/home_edit_text_icons_padding"
                        android:drawableStart="@drawable/ic_email"
                        android:text="Email"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/supporting_text_size" />

                    <TextView
                        android:id="@+id/ask_user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/home_edit_text_icons_padding"
                        android:drawableStart="@drawable/ic_phone_android"
                        android:text="Phone"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/supporting_text_size" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</ScrollView>
